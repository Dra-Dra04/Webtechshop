@model UserModel
@{
	ViewData["Title"]="Register";
}
<section>
	<!--form-->
	<div class="container">
		<div class="row">


			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Đăng kí tài khoản</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login"  asp-controller="Account">

						<div class="form-group">
							<label>Tên đăng nhập</label>
							<input asp-for="Username" class="form-control"> </input>
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" class="form-control"> </input>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Mật khẩu</label>
							<input asp-for="Password" class="form-control"> </input>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<button class="btn btn-default">Đăng nhập</button>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section>

