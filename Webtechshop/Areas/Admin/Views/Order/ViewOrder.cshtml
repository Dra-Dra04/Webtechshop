@model IEnumerable<OrderDetail>
@{
    ViewData["title"] = "Order Detail";
    decimal total =0;
    decimal subtotal = 0;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chi tiết đơn hàng</title>
</head>
<body>
    <h3>Chi tiết đơn hàng</h3>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tên khách hàng</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                subtotal = item.Quantity * item.Price;
                total += subtotal;
                <tr>
                    <input type="hidden" asp-for="@item.OrderCode" class="getId"/>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td>@subtotal.ToString("#,##0 VNĐ")</td>
                </tr>
            }
       <tr>
           <th colspan="5">Tổng:</th>
                <td>@total.ToString("#,##0 VNĐ")</td> 
                <td>
                    @if (@ViewBag.Status != 3)
                    {
                        <select class="form-control select-update-order">
                            <option value="0">Đơn hàng mới</option>
                            <option value="1">Đã xử lý</option>
                        </select>
                    }
                </td>
       </tr>
            
        </tbody>
    </table>
    <a asp-action="Index">Trở về</a>
</body>
</html>
@section Scripts{
    <script>
        $(document).ready(function(){
            $('.select-update-order').change(function(){
            var status = $(this).val();
            var ordercode = $(this).closest('tr').find('.getId').val();
            //alert(status);
            // alert(ordercode);
            $.ajax({
                type: "POST",
                url: "@Url.Action("UpdateOrder")",
                data: {status: status, ordercode : ordercode},
                success: function (result){
                    if(result.success){
                        console.log("Update successful");
                    }else{
                        console.log("Update failed: " + result.message);
                    }
                },
                error: function(req,status,error){
                    console.error("Error updating order:",error);
                }
            });
        });
    });
    </script>
}