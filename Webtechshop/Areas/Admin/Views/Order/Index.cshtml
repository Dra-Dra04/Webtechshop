@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order List";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Danh sách đơn hàng</h3>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tên khách hàng</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.CreateDate</td>
                    <td>
                        @if (@item.Status == 1)
                        {
                            <span class="text text-success">Đơn hàng mới</span>
                        }
                        else if (@item.Status == 2)
                        {
                            <span class="text text-warning">Đơn hàng đã xử lý</span>
                        }
                        else
                        {
                            <span class="text text-danger">Đơn hàng đã hủy</span>
                        }
                    </td>                       
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Chi tiết</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>