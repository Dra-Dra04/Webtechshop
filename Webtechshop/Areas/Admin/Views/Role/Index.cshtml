@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "List Role";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Chức vụ người dùng</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Role">Thêm chức vụ mới</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên chức vụ</th>
                <th>Chức vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>                   
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@user.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@user.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>