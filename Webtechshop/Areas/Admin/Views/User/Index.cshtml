
@{
    ViewData["title"] = "User List";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Danh sách người dùng</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="User">Thêm người dùng</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Mật khẩu</th>
                <th>Số điện thoại</th>
				<th>Chức vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usersWithRole in Model)
            {
                <tr>
                    <td>@usersWithRole.User.Id</td>
                    <td>@usersWithRole.User.UserName</td>
                    <td>@usersWithRole.User.Email</td>
                    <td>@usersWithRole.User.PasswordHash</td>
                    <td>@usersWithRole.User.PhoneNumber</td>
                    <td>@usersWithRole.RoleName</td>
                    <td></td>
                    <td>
						@if (usersWithRole.User.Id != ViewBag.loggedInUserId)
						{
							
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@usersWithRole.User.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@usersWithRole.User.Id">Xóa</a>
                            
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>