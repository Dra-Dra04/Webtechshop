@model AppUserModel
@{
    ViewData["title"] = "Create Users";
}

<h3>Tạo người dùng</h3>
<div class="col-md-9">
    <form autocomplete="off" asp-action="Create" enctype="multipart/form-data">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên người dùng</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
		
        <div class="form-group">
			<label>Mật khẩu</label>
			<input asp-for="PasswordHash" required type="password" class="form-control" />
			<span asp-validation-for="PasswordHash" class="text-danger"></span>

        <div class="form-group">
            <label>Chức vụ</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Create</button>
        </div>

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["success"]
                </div>
            }
    </form>
    <a asp-action="Index">Trở về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
