@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product listed";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Danh sách sản phẩm</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá tiền</th>
                <th>Hình ảnh</th>
                <th>Từ khóa</th>
                <th>Loại sản phẩm</th>
                <th>Thương hiệu</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/Images/@item.Image" width="120px" height="150px" /> </td>
                    <td> @item.Slug </td>
                    <td> @item.Category.Name </td>
                    <td> @item.Brand.Name </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>